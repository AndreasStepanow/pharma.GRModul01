<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form">
	<Panel expandable="true" expanded="{local>/Header/expanded}">
		<f:Form id="FormDisplay" editable="false">
			<f:layout>
				<f:ResponsiveGridLayout labelSpanXL="3"
					labelSpanL="3" labelSpanM="3" labelSpanS="4"
					adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4"
					emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1"
					columnsM="1" singleContainerFullSize="false" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>

						<!--f:FormElement label="{i18n>textEmployee}">
							<f:fields>
								<Text id="il2" 
									text="{local>/Employee/Name}" width="100%"/>
							</f:fields>
						</f:FormElement-->

						<f:FormElement label="{i18n>Header.CMRReference}">
							<f:fields>
								<Text id="il5" 
									text="{local>/Loading1/Client}-{local>/Loading1/CmrRef}" width="100%" />
							</f:fields>
						</f:FormElement>

						<f:FormElement label="{i18n>Header.RoughtGR}">
							<f:fields>

								<Text id="il6"
									text="{local>/Loading1/Zbetrst}-{local>/Loading1/RoughGR}" width="100%"/>
							</f:fields>
						</f:FormElement>



					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</Panel>
</core:FragmentDefinition>